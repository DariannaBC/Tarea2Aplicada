<Window x:Class="Tarea2Aplicada.Ejercicios_Del_Capitulo_2.Cap4Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea2Aplicada.Ejercicios_Del_Capitulo_2"
        mc:Ignorable="d"
        Title="Cap4Ejercicio2" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel >
                <Label Content="Ingrese el numero que desea calcular"/>



            </StackPanel>
            <TextBox x:Name="CalcularNumero" Height="35" Width="65"/>

            <StackPanel>

                <Label Content="Ingrese la base que desea calcular"/>

            </StackPanel>

            <TextBox x:Name="CalcularTextBox" Height="35" Width="65"/>
            <Button x:Name="CalcularButton" Content="Calculo" Click="CalcularButton_Click" Margin="40, 0"/>

            <StackPanel Margin="0, 50">
                <TextBox x:Name="ResultadoTextBox" Height="40" Width="40"/>

            </StackPanel>

        </StackPanel>
        
    </Grid>
</Window>
