        mc:Ignorable="d"
        Title="Cap4Ejercicio1" Height="450" Width="800">
    <Grid>

        <StackPanel Orientation="Vertical">

            <StackPanel>
                <Label Content="Ingrese el numero de la tabla que desea Calcular"/>
                
               
